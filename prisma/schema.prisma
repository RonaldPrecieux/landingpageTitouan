generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id        String   @id @default(uuid())
  prenom    String
  nom       String
  email     String   @unique
  accepte   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([email])
}

model Visit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  @@index([createdAt])
}